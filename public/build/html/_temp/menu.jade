aside.sidebar
    .top_bar
        p.logo
            i.iconfont.icon-95b
        i.iconfont.icon-7cd.toggle_another_form
    ul.menu
        - each menu in menus
            if menu.url && (!menu.role || !!~menu.role.indexOf(role))
                li(class={active: curPage === '#{menu.id}'})
                    a(href='http://es2.laizhuan.com/back/page/#{menu.dir === "common" ? menu.url : menu.url+"_"+menu.dir }')
                        i(class="iconfont icon-#{menu.icon}")
                        span.title #{menu.title}
                        span.arrow
            else if menu.items && (!menu.role || !!~menu.role.indexOf(role))
                li(class={active: curPage === '#{menu.id}'})
                    a(href='javascript:;')
                        i(class="iconfont icon-#{menu.icon}")
                        span.title #{menu.title}
                        span.arrow
                    ul.sub_menu
                        - each item in menu.items
                            if item.url
                                li
                                    a.title(href='http://es2.laizhuan.com/back/page/#{item.dir === "common" ? item.url : item.url+"_"+item.dir }') #{item.title}
                            else if item.interface
                                li
                                    a.title(href='http://es2.laizhuan.com/back/#{item.interface}') #{item.title}
            else if menu.interface
                li
                    a(href='http://es2.laizhuan.com/back/#{menu.interface}')
                        i(class="iconfont icon-#{menu.icon}")
                        span.title #{menu.title}
                        span.arrow
