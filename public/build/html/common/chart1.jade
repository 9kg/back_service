extends ../_temp/main
block head
  style(type='text/css').
    .ct{
        height: 500px;
        margin-top: 30px;
    }
block body
  - var curPage = "图表";
  include ../_temp/menu
  .content
    h1
      | 图表示例（一） 
      small -厚步小编
    .grid_lg
      .ct
  include ../_temp/js_chart
  script(type='text/javascript').
      $(function() {
          $.ajax({
              url: "http://git.bramble.wang/back/js/json/data.json",
              dataType: "json"
          }).always(function(data) {
              var list = data.lists.reverse();
              
              var opt = chart.data2opt(list,{dataOpt:[{
                  name: "用户数量",
                  value: "all_did"
              }, {
                  name: "销售额",
                  value: "all_price"
              }],myOpt:{
                  title:{
                      text: "用户数量&销售额",
                      left:"left"
                  },
                  dataZoom: {
                      type: 'slider',
                      start: 80,
                      end: 100
                  },
                  legend:{
                      top:"30px",
                      left:0
                  }
              }});

              chart.renderChart($(".ct")[0],opt);
          });
      });