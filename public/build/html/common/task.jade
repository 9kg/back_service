extends ../_temp/main
block head
    style(type="text/css").
        .tool_ct{
            margin-bottom: 15px;
        }
        .oper_ct .btn{
            margin: 0 3px;
        }
        .oper_ct .btn_add_ct{
            float: right;
        }
        .oper_ct .btn_batch_ct{
            margin-right: 85px;
        }
        .btn.btn_idfa,.btn.btn_idfa:hover{
            color: transparent;
        }
        .btn.btn_idfa:before{
            content: 'IDFA';
            color: #fff;
            position: absolute;
        }
        .btn.btn_idfa:hover:before{
            color: #f0ad4e;
        }
block body
    include ../_temp/menu
    .content
        .grid.tool_ct
            .ct_5-2.filter_ct
                .btn_radios.btn_radios_6
                    label.btn_radio
                        input(type='radio', name='status', value='-2')
                        span.btn_radio_desc 失败
                    label.btn_radio.btn_radio_warning
                        input(type='radio', name='status', value='-1', checked='')
                        span.btn_radio_desc 审核
                    label.btn_radio.btn_radio_info 
                        input(type='radio', name='status', value='1')
                        span.btn_radio_desc 进行
                    label.btn_radio.btn_radio_magenta
                        input(type='radio', name='status', value='2')
                        span.btn_radio_desc 暂停
                    label.btn_radio.btn_radio_danger
                        input(type='radio', name='status', value='8')
                        span.btn_radio_desc 终止
                    label.btn_radio.btn_radio_success
                        input(type='radio', name='status', value='9')
                        span.btn_radio_desc 完成
            .ct_5-3.oper_ct
                .btn_add_ct
                    button.btn.btn_primary.btn_add(type="button") 添加任务
                .btn_batch_ct
                    if ~[1,5,7].indexOf(role)
                        button.btn.btn_success.btn_agree(type="button") 同意
                        button.btn.btn_danger.btn_disagree(type="button") 拒绝
                    button.btn.btn_magenta.btn_pause.hidden(type="button") 暂停
                    if ~[1,5,7].indexOf(role)
                        button.btn.btn_primary.btn_start.hidden(type="button") 开始
                    button.btn.btn_danger.btn_stop.hidden(type="button") 终止
                    button.btn.btn_info.btn_export.hidden(type="button") 导出IDFA
                    button.btn.btn_delete(type="button") 删除
    include ../_temp/js_base
    script(src='http://es2.laizhuan.com/back/js/page/add_task.js')
    script(src='http://es2.laizhuan.com/back/js/page/task.js')