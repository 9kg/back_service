extends ../_temp/main
block body
    - var curPage = "表格";
    include ../_temp/menu
    .content
        label.radio
            input(type='radio', name='table_theme', value="default", checked='')
            span.opt_imitate
            span.opt_desc 默认
        label.radio
            input(type='radio', name='table_theme', value="gray")
            span.opt_imitate
            span.opt_desc 灰色
        label.radio
            input(type='radio', name='table_theme', value="primary")
            span.opt_imitate
            span.opt_desc 深蓝
        label.radio
            input(type='radio', name='table_theme', value="info")
            span.opt_imitate
            span.opt_desc 浅蓝
        label.radio
            input(type='radio', name='table_theme', value="lightblue")
            span.opt_imitate
            span.opt_desc 亮蓝
        label.radio
            input(type='radio', name='table_theme', value="success")
            span.opt_imitate
            span.opt_desc 绿色
        label.radio
            input(type='radio', name='table_theme', value="warning")
            span.opt_imitate
            span.opt_desc 橙色
        label.radio
            input(type='radio', name='table_theme', value="danger")
            span.opt_imitate
            span.opt_desc 红色
        label.radio
            input(type='radio', name='table_theme', value="magenta")
            span.opt_imitate
            span.opt_desc 粉色
    include ../_temp/js_base
    script(type='text/javascript').
        $(function() {
            var opt = {
                $ct: $(".content"),
                col: [
                        {
                            key: "id",
                            title: "ID",
                            sort: true,
                            filter: true
                        }, {
                            key: "phone",
                            title: "电话",
                            sort: false,
                            // show: false,
                            filter: true
                        }, {
                            key: "money",
                            title: "金额",
                            sort: true
                        }, {
                            key: "role",
                            title: "权限",
                            sort: true,
                            filter: true,
                            render: function(a, b) {
                              a.append(b + "大会上");
                            }
                        }],
                // page: false,
                isLocal: true,
                url: "http://git.bramble.wang/back/js/json/table.json",
                total: 86,
                pageTotal: 9
            };
            var cc = new Table(opt);
            $('[name="table_theme"]').bind('click',function(){
                cc.theme = $(this).val();
                cc.render();
            });
        });