extends ../_temp/main
block head
    style(type='text/css').
        .content{
            max-width: 800px;
            margin: 0 auto;
        }
        .add_business_form{
            border-bottom: 1px solid #ccc;
            margin-bottom: 10px;
        }
block body
    .content
        h1
          | 添加商务
          small
        .add_business_form
            style(type='text/css').
                form.add_business{
                    max-width: 600px;
                    margin: 10px auto;
                }
            form.add_business
                .grid
                    .ct.grid
                        .ct_4.field 姓名
                        .ct_4-3
                            input(type='text', name='bd_name', data-validate="require", data-validate-dir="left")
                    .ct.grid
                        .ct_4.field 电话
                        .ct_4-3
                            input(type='text', name='bd_phone', data-validate="require")
                    .ct.grid
                        .ct_4.field 账号
                        .ct_4-3
                            input(type='text', name='bd_username', data-validate="require")
                    .ct.grid
                        .ct_4.field 密码
                        .ct_4-3
                            input(type='text', name='bd_password', data-validate="require")
        .oper_btns_ct.t_right
            button.btn.btn_business_reset(type="button") 重置
            button.btn.btn_primary.btn_business_submit(type="button") 提交
    include ../_temp/js_base
    script(src='http://git.bramble.wang/back/js/page/add_business.js')