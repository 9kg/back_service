extends ../_temp/main
block head
    style(type='text/css').
        .content{
            max-width: 800px;
            margin: 0 auto;
        }
        .add_adver_form{
            border-bottom: 1px solid #ccc;
            margin-bottom: 10px;
        }
block body
    .content
        h1
          | 添加广告主
          small
        .add_adver_form
            style(type='text/css').
                form.add_adver{
                    max-width: 600px;
                    margin: 10px auto;
                }
            form.add_adver
                .grid
                    .ct.grid
                        .ct_4.field 公司
                        .ct_4-3
                            input(type='text', name='ad_company', data-validate="require", data-validate-dir="left")
                    .ct.grid
                        .ct_4.field 姓名
                        .ct_4-3
                            input(type='text', name='ad_name', data-validate="require")
                    .ct.grid
                        .ct_4.field 电话
                        .ct_4-3
                            input(type='text', name='ad_phone', data-validate="require")
                    .ct.grid
                        .ct_4.field 账号
                        .ct_4-3
                            input(type='text', name='ad_username', data-validate="require")
                    .ct.grid
                        .ct_4.field 密码
                        .ct_4-3
                            input(type='text', name='ad_password', data-validate="require")
        .oper_btns_ct.t_right
            button.btn.btn_adver_reset(type="button") 重置
            button.btn.btn_primary.btn_adver_submit(type="button") 提交
    include ../_temp/js_base
    script(src='http://git.bramble.wang/back/js/page/add_adver.js')