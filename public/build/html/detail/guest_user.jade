extends ../_temp/main
block head
    style(type='text/css').
        a.query_link{
            margin-left: 15px;
            color: #aaa;
            border-bottom: 1px solid #aaa;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            user-select: none;
        }
        a.query_link:hover{
            color: #1D61BF;
            border-color: #1D61BF;
        }
block body
    - var curPage = "项目";
    .content
        .detail
            h1
                | 特邀用户详情
                small
                    |-
                    span #{renderData.id}
            h2.title: |基本信息
            .grid.details
                label.ct_2.grid_nowrap
                    .ct_4.field: |ID
                    .ct_4-3
                        span #{renderData.id}
                label.ct_2.grid_nowrap
                    .ct_4.field: |用户ID
                    .ct_4-3
                        span #{renderData.uid}
                label.ct_2.grid_nowrap
                    .ct_4.field: |类别
                    .ct_4-3
                        span #{renderData.type}
                label.ct_2.grid_nowrap
                    .ct_4.field: |名称
                    .ct_4-3
                        span #{renderData.name}
                label.ct_2.grid_nowrap
                    .ct_4.field: |推广人
                    .ct_4-3
                        span #{renderData.pid}
                label.ct_2.grid_nowrap
                    .ct_4.field: |手机
                    .ct_4-3
                        span #{renderData.xx}
                label.ct_2.grid_nowrap
                    .ct_4.field: |微信
                    .ct_4-3
                        span #{renderData.xx}
            h2.title: |其他信息
            .grid.details
                label.ct_2.grid_nowrap
                    .ct_4.field: |好友数
                    .ct_4-3
                        span #{renderData.xx}
                        //- a.query_link.query_idfa(href="javascript:;"): |(查看IDFA)
                        //- a.query_link.query_num(href="javascript:;"): |(查看报表)
                label.ct_2.grid_nowrap
                    .ct_4.field: |任务数
                    .ct_4-3
                        span #{renderData.xx}
                        //- a.query_link.query_num(href="javascript:;"): |(查看报表)
                label.ct_2.grid_nowrap
                    .ct_4.field: |费用
                    .ct_4-3
                        span !{renderData.pay}
                label.ct_2.grid_nowrap
                    .ct_4.field: |已付
                    .ct_4-3
                        span #{renderData.payed}
                        //- a.query_link.query_money(href="javascript:;"): |(查看报表)
                label.ct.t_right
                    button.btn.btn_info.btn_edit
                        |修改
