extends ../_temp/main
block head
block body
    - var curPage = "项目";
    .content
        .detail
            h1
                | 商务人员详情
                small
                    |-
                    span #{renderData.name}(#{renderData.id})
            h2.title: |基本信息
            .grid.details
                label.ct_2.grid_nowrap
                    .ct_4.field: |ID
                    .ct_4-3
                        span #{renderData.id}
                label.ct_2.grid_nowrap
                    .ct_4.field: |名称
                    .ct_4-3
                        span #{renderData.name}
                label.ct_2.grid_nowrap
                    .ct_4.field: |电话
                    .ct_4-3
                        span #{renderData.phone}
                label.ct_2.grid_nowrap
                    .ct_4.field: |账户
                    .ct_4-3
                        span #{renderData.username}
                label.ct.t_right
                    button.btn.btn_info.btn_edit
                        |修改
            h2.title: |其他信息
            .grid.details
                label.ct_2.grid_nowrap
                    .ct_4.field: |销售额
                    .ct_4-3
                        span #{renderData.price_all || '0.00'} (元)
                label.ct_2.grid_nowrap
                    .ct_4.field: |任务完成数
                    .ct_4-3
                        span #{renderData.taskNum || '0'} (个)
    include ../_temp/js_base
    script(type='text/javascript').
        var bdData =  !{JSON.stringify(renderData)};
        if(!bdData || !bdData.id){
            alert('获取数据失败');
            window.close();
        }
    script(src='http://es2.laizhuan.com/back/js/page/detail_business.js')