extends ../_temp/main
block head
    style(type='text/css').
        .content{
            max-width: 800px;
            margin: 0 auto;
        }
        .add_promoter_form{
            border-bottom: 1px solid #ccc;
            margin-bottom: 10px;
        }
block body
    .content
        h1
          | 添加推广人员
          small
        .add_promoter_form
            style(type='text/css').
                form.add_promoter{
                    max-width: 600px;
                    margin: 10px auto;
                }
            form.add_promoter
                .grid
                    .ct.grid
                        .ct_4.field 姓名
                        .ct_4-3
                            input(type='text', name='name', data-validate="require", data-validate-dir="left")
                    .ct.grid
                        .ct_4.field 电话
                        .ct_4-3
                            input(type='text', name='phone', data-validate="require")
                    .ct.grid
                        .ct_4.field 账号
                        .ct_4-3
                            input(type='text', name='username', data-validate="require")
                    .ct.grid
                        .ct_4.field 密码
                        .ct_4-3
                            input(type='text', name='password', data-validate="require")
        .oper_btns_ct.t_right
            button.btn.btn_promoter_reset(type="button") 重置
            button.btn.btn_primary.btn_promoter_submit(type="button") 提交
    include ../_temp/js_base
    script(src='http://es2.laizhuan.com/back/js/page/add_promoter.js')