extends ../_temp/main
block head
    style(type='text/css').
        a.query_link{
            margin-left: 15px;
            color: #aaa;
            border-bottom: 1px solid #aaa;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            user-select: none;
        }
        a.query_link:hover{
            color: #1D61BF;
            border-color: #1D61BF;
        }
block body
    .content
        .detail
            h1
                | 推广人员详情
                small
                    |-
                    span.guest_id
            h2.title: |基本信息
            .grid.details
                label.ct_2.grid_nowrap
                    .ct_4.field: |ID
                    .ct_4-3
                        span #{renderData.id}
                label.ct_2.grid_nowrap
                    .ct_4.field: |账号
                    .ct_4-3
                        span #{renderData.username}
                label.ct_2.grid_nowrap
                    .ct_4.field: |姓名
                    .ct_4-3
                        span #{renderData.name}
                label.ct_2.grid_nowrap
                    .ct_4.field: |电话
                    .ct_4-3
                        span #{renderData.phone}
                label.ct_2.grid_nowrap
                    .ct_4.field: |创建时间
                    .ct_4-3
                        span #{renderData.createdAt}
                label.ct_2.grid_nowrap
                    .ct_4.field: |最近操作时间
                    .ct_4-3
                        span #{renderData.updatedAt}
                label.ct.t_right
                    button.btn.btn_info.btn_edit
                        |修改
                    button.btn.btn_danger.btn_remove
                        |删除
    include ../_temp/js_base
    script(type='text/javascript').
        var promoter_data =  !{JSON.stringify(renderData)};
        if(!promoter_data || !promoter_data.id){
            alert('获取数据失败');
            window.close();
        }
    script(src='_HOST_/js/page/detail_promoter.js')