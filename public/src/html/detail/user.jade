extends ../_temp/main
block head
    style(type='text/css').
        a.query_link{
            margin-left: 15px;
            color: #aaa;
            border-bottom: 1px solid #aaa;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            user-select: none;
        }
        a.query_link:hover{
            color: #1D61BF;
            border-color: #1D61BF;
        }
block body
    - var curPage = "项目";
    .content
        .detail
            h1
                | 用户详情
                small
                    |-
                    span  #{renderData.objectId}
            h2.title: |基本信息
            .grid.details
                label.ct_2.grid_nowrap
                    .ct_4.field: |ID
                    .ct_4-3
                        span #{renderData.objectId}
                label.ct_2.grid_nowrap
                    .ct_4.field: |IDFA
                    .ct_4-3
                        span #{renderData.idfa || '无记录'}
                label.ct_2.grid_nowrap
                    .ct_4.field: |手机
                    .ct_4-3
                        span #{renderData.phone || '无记录'}
                label.ct_2.grid_nowrap
                    .ct_4.field: |微信昵称
                    .ct_4-3
                        span #{renderData.nickname || '无记录'}
                label.ct_2.grid_nowrap
                    .ct_4.field: |支付宝
                    .ct_4-3
                        span #{renderData.alipay || '无记录'}
                label.ct_2.grid_nowrap
                    .ct_4.field: |支付宝姓名
                    .ct_4-3
                        span #{renderData.alipay_name || '无记录'}
                label.ct_2.grid_nowrap
                    .ct_4.field: |最近IP
                    .ct_4-3
                        span #{renderData.ip || '无记录'}
                label.ct_2.grid_nowrap
                    .ct_4.field: |最近登录
                    .ct_4-3
                        span #{renderData.loginLatist}
                label.ct_2.grid_nowrap
                    .ct_4.field: |登录次数
                    .ct_4-3
                        span #{renderData.loginNum}次
            h2.title: |其他信息
            .grid.details
                label.ct_2.grid_nowrap
                    .ct_4.field: |今日收入
                    .ct_4-3
                        span #{renderData.todayGet || 0}元
                        //- a.query_link.query_num(href="javascript:;"): |(查看明细)
                label.ct_2.grid_nowrap
                    .ct_4.field: |历史收入
                    .ct_4-3
                        span #{renderData.allGet}元
                label.ct_2.grid_nowrap
                    .ct_4.field: |好友数
                    .ct_4-3
                        span #{((renderData.fuid && renderData.fuid !== 'null') && eval(renderData.fuid).length) || 0}个
                label.ct_2.grid_nowrap
                    .ct_4.field: |总完成任务数
                    .ct_4-3
                        span #{renderData.taskall_end}个
                label.ct_2.grid_nowrap
                    .ct_4.field: |已提现
                    .ct_4-3
                        span #{renderData.pend || 0}
                        |元
                if ~[1,4,6].indexOf(role)
                    label.ct.t_right
                        button.btn.btn_danger.btn_level
                            |升级为特邀用户
    include ../_temp/js_base
    script(type='text/javascript').
        var userData =  !{JSON.stringify(renderData)};
        if(!userData || !userData.objectId){
            alert('获取数据失败');
            window.close();
        }
    if ~[1,4,6].indexOf(role)
        script(src='_HOST_/js/page/add_guest_user.js')
    script(src='_HOST_/js/page/detail_user.js')