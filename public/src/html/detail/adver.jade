extends ../_temp/main
block head
    style(type='text/css').
        a.query_link{
            margin:0 10px;
            color: #aaa;
            border-bottom: 1px solid #aaa;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            user-select: none;
        }
        a.query_link:hover{
            color: #1D61BF;
            border-color: #1D61BF;
        }
        .recharge_form{
            padding: 35px 0;
        }
        .recharge_form .whether .opt_imitate{
            border-radius: 0;
        }
        .whether .opt_imitate:first-of-type{
            color: #d9534f;
            background-color: #EEE;
        }
        .whether .opt_imitate:last-of-type{
            color: #fff;
        }
        .whether input[type='checkbox']:checked ~ .opt_imitate:first-of-type {
            color: #fff;
        }
        .whether input[type='checkbox']:checked ~ .opt_imitate:last-of-type {
            color: #60c560;
            background-color: #EEE;
        }
        .records_list{
            min-height:120px;
        }
block body
    - var curPage = "项目";
    .content
        .detail
            h1
                | 广告主详情
                small
                    |-
                    span #{renderData.name}(#{renderData.id})
            h2.title: |基本信息
            .grid.details
                label.ct_2.grid_nowrap
                    .ct_4.field: |ID
                    .ct_4-3
                        span #{renderData.id}
                label.ct_2.grid_nowrap
                    .ct_4.field: |姓名
                    .ct_4-3
                        span #{renderData.name}
                label.ct_2.grid_nowrap
                    .ct_4.field: |电话
                    .ct_4-3
                        span #{renderData.phone}
                label.ct_2.grid_nowrap
                    .ct_4.field: |账号
                    .ct_4-3
                        span #{renderData.username}
                label.ct.t_right
                    button.btn.btn_info.btn_edit
                        |修改
            h2.title: |其他信息
            .grid.details
                label.ct_2.grid_nowrap
                    .ct_4.field: |商务
                    .ct_4-3
                        span #{renderData.bd_name}
                label.ct_2.grid_nowrap
                    .ct_4.field: |公司
                    .ct_4-3
                        span #{renderData.company}
                label.ct_2.grid_nowrap
                    .ct_4.field: |余额
                    .ct_4-3
                        span #{renderData.money}
                        |元
                        a.query_link.recharge_records(href="javascript:;") (充值记录)
                label.ct_2.grid_nowrap
                    .ct_4.field: |累计消费
                    .ct_4-3
                        span #{renderData.price_all || '0.00'}
                        |元
                label.ct_2.grid_nowrap
                    .ct_4.field: |任务
                    .ct_4-3
                        span #{renderData.taskNum || 0}
                        |个
                label.ct.t_right
                    button.btn.btn_primary.btn_add_task(type="button") 添加任务
                    if ~[1,5].indexOf(role)
                        button.btn.btn_success.btn_recharge(type="button") 充值
    include ../_temp/js_base
    script(type='text/javascript').
        var adData =  !{JSON.stringify(renderData)};
        if(!adData || !adData.id){
            alert('获取数据失败');
            window.close();
        }
    script(src='_HOST_/js/page/add_task.js')
    script(src='_HOST_/js/page/detail_adver.js')