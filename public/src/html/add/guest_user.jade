extends ../_temp/main
block body
    .add_guest_user_form
        style(type='text/css').
            .add_guest_user{
                max-width: 500px;
                margin: 10px auto;
            }
        form.add_guest_user
            .grid
                input(type='hidden', name='uid')
                .ct.grid
                    .ct_4.field 类别
                    .ct_4-3
                        select(name="type")
                            option(value="") 请选择
                            option(value="anchor") 主播
                            option(value="microblog") 微博
                            option(value="team") 推广团队
                            option(value="wechat") 微信
                            option(value="person") 个人
                            option(value="other") 其他
                .ct.grid.fans_num_ct.hidden
                    .ct_4.field 粉丝(在线观看)数
                    .ct_4-3
                        label.suffix
                            input(type='text', name='fans_num', data-validate="require,int,!-",disabled)
                            span.opt_imitate 人
                .ct.grid
                    .ct_4.field 名称
                    .ct_4-3
                        input(type='text', name='name', data-validate="require")
                .ct.grid
                    .ct_4.field 支付宝账号
                    .ct_4-3
                        input(type='text', name='alipay')
                .ct.grid
                    .ct_4.field 推广费用
                    .ct_4-3.grid_nowrap.promoter_fee_ct
                        .ct_4-3
                            .btn_radios.btn_radios_3
                                label.btn_radio
                                    input(type='radio', name='charge_by_date', value='day', checked)
                                    span.btn_radio_desc 每日
                                label.btn_radio.btn_radio_warning
                                    input(type='radio', name='charge_by_date', value='week')
                                    span.btn_radio_desc 每周
                                label.btn_radio.btn_radio_info 
                                    input(type='radio', name='charge_by_date', value='month')
                                    span.btn_radio_desc 每月
                        .ct_4
                            label.suffix
                                input(type='text', name='fee_date', data-validate="require,num,!-", value="0")
                                span.opt_imitate 元
                        .ct_4-3
                            label.checkbox
                                input.charge_type(type='checkbox', data-show=".charge_one")
                                span.opt_imitate
                                span.opt_desc 每个
                        .ct_4
                            label.suffix.charge_one.hidden
                                input(type='text', name='fee_per', data-validate="require,num,+", disabled)
                                span.opt_imitate 元
                        .ct_4
                            label.checkbox
                                input.charge_type(type='checkbox', data-show=".charge_other")
                                span.opt_imitate
                                span.opt_desc 其他
                        .ct_4-3
                            label.suffix.charge_other.hidden
                                textarea(disabled, name="fee_other", data-validate="require")
                .ct.grid
                    .ct_4.field APP可提现
                    .ct_4-3
                        label.whether
                            input(type='checkbox', name="can_withdraw", value="1",checked)
                            span.opt_imitate 是
                            span.opt_imitate 否